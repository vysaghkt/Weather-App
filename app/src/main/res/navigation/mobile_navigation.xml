<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.weatherdataapp.ui.today.CurrentWeatherFragment"
        android:label="@string/title_home"
        tools:layout="@layout/current_weather_fragment" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.weatherdataapp.ui.daily.DailyFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/daily_fragment" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.weatherdataapp.ui.settings.SettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/settings_fragment" />
</navigation>